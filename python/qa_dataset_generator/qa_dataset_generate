#!/usr/bin/env python3

from cenai_core import Logger
from cenai_core.grid import GridCLI, GridRunner


class QADatasetGeneration(Logger):
    logger_name = "cenai.system"

    def __init__(self):
        super().__init__()

        self._cli = GridCLI(
            title="QA dataset generator",
            runner=GridRunner,
            search_name="profile",
            search_dir="%python/qa_dataset_generator/profile",
            search_pattern="*.yaml",
            search_type="file",
        )

    def __call__(self) -> None:
        self._cli.invoke()


if __name__ == "__main__":
    try:
        qa_dataset_generate = QADatasetGeneration()
        qa_dataset_generate()

    except Exception as error:
        QADatasetGeneration.ERROR(error)
        exit(-1)
